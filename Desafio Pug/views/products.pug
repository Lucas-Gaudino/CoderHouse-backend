  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav
      li.nav-item
        a.nav-link(href='http://localhost:8080/api/products') Vista Productos 
      li.nav-item
        a.nav-link(href='http://localhost:8080/') Formulario
table.table.table-dark
  thead
    tr
      th(scope='col') Id
      th(scope='col') Titulo
      th(scope='col') Precio
      th(scope='col') Imagen
  tbody
  for product in products
    tr
      th(scope='row') #{product.id}
      td #{product.title}
      td #{product.price}
      td
       img(src=product.thumbnail class="mh-100" style="width: 100px; height: 100px;")

    